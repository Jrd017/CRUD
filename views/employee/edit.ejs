<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>
    <div class="container">
        <div class="navigation">
            <a href="/employees/show/<%= employee._id %>" class="btn btn-secondary">← Back to Details</a>
        </div>

        <div class="form-card">
            <h1>Edit Employee</h1>
            
            <% if (errors && errors.length > 0) { %>
                <div class="error-messages">
                    <% errors.forEach(function(error) { %>
                        <div class="error"><%= error %></div>
                    <% }); %>
                </div>
            <% } %>

            <form action="/employees/update/<%= employee._id %>" method="post" class="employee-form">
                <div class="form-group">
                    <label for="name">Name *</label>
                    <input 
                        type="text" 
                        id="name" 
                        name="name" 
                        value="<%= employee.name %>"
                        required
                        maxlength="100"
                    >
                </div>

                <div class="form-group">
                    <label for="address">Address *</label>
                    <textarea 
                        id="address" 
                        name="address" 
                        rows="3"
                        required
                    ><%= employee.address %></textarea>
                </div>

                <div class="form-group">
                    <label for="position">Position *</label>
                    <input 
                        type="text" 
                        id="position" 
                        name="position" 
                        value="<%= employee.position %>"
                        required
                    >
                </div>

                <div class="form-group">
                    <label for="salary">Annual Salary (₱) *</label>
                    <input 
                        type="number" 
                        id="salary" 
                        name="salary" 
                        value="<%= employee.salary %>"
                        min="0"
                        step="1000"
                        required
                    >
                </div>

                <div class="form-actions">
                    <button type="submit" class="btn btn-primary">Update Employee</button>
                    <a href="/employees/show/<%= employee._id %>" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</body>
</html>